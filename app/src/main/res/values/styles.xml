<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>


    <!-- referencing this https://stackoverflow.com/questions/28523517/appcompat-popup-menu-runtimeexception -->
    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <!-- referencing http://www.zoftino.com/android-datepicker-example -->
    <style name="MyDatePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
         <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <!-- referencing https://stackoverflow.com/questions/3389501/activity-transition-in-android -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>




</resources>
