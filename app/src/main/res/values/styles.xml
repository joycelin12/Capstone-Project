<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>


    <!-- referencing this https://stackoverflow.com/questions/28523517/appcompat-popup-menu-runtimeexception -->
    <style name="MyPopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>




</resources>
