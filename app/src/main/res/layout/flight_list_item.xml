<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/airlineImage"
        android:contentDescription="@string/airline_image"
        app:layout_constraintBottom_toTopOf="@+id/airline"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/airline"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/route"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/route"
        android:gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/airline"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/route"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/details"
        android:text="@string/details"
        app:layout_constraintTop_toBottomOf="@+id/price"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/book"
        app:layout_constraintTop_toBottomOf="@+id/details"
        />
</android.support.constraint.ConstraintLayout>
</ScrollView>

