<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:id="@+id/origin_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin_airport"
        />
    <TextView
        android:id="@+id/origin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_weight="1" >
        <TextView
            android:id="@+id/dest_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/destination_airport"/>
        <TextView
        android:id="@+id/dest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/from_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/from_date"/>

        <TextView
        android:id="@+id/from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/to_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_date_header"/>
        <TextView
        android:id="@+id/to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    </LinearLayout>
</LinearLayout>

