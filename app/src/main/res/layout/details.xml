<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:id="@+id/outboundLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/outbound_flight"

        />

    <TextView
        android:id="@+id/outboundFlight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/outboundLabel"
        />

    <TextView
        android:id="@+id/inboundLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/inbound_flight"
        app:layout_constraintTop_toBottomOf="@id/outboundFlight"
        />

    <TextView
        android:id="@+id/inboundFlight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/inboundLabel"

        />


    <TextView
        android:id="@+id/dialogPrice"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inboundFlight"
        />

</android.support.constraint.ConstraintLayout>